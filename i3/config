# Screenshot whole screen
bindcode 107 exec --no-startup-id ~/.config/i3/scripts/screenshot
bindsym $mod+p exec --no-startup-id ~/.config/i3/scripts/screenshot

# Screenshot region
bindsym $mod+Shift+p exec --no-startup-id ~/.config/i3/scripts/screenregion

# Start firefox
bindsym $mod+x exec --no-startup-id firefox

# Start obsidian
bindsym $mod+o exec --no-startup-id obsidian

# View open window
#bindsym $mod+Shift+d exec --no-startup-id rofi -show window
bindsym $mod+Tab exec --no-startup-id rofi -show window

